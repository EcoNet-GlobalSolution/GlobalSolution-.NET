@model GlobalSolution_.NET.Models.TiporiscoModel

@{
    ViewData["Title"] = "Edit Risco";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_risco" />
            <div class="form-group">
                <label for="categoria">Categoria do risco <span class="text-danger">*</span></label>
                <select asp-for="categoria" class="form-control" asp-items="@(ViewBag.CategoriaRisco as IEnumerable<SelectListItem>)"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
