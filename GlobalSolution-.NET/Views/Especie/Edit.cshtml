@model GlobalSolution_.NET.Models.EspecieModel

@{
    ViewData["Title"] = "Edit Espécie";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_especie" />
            <div class="form-group">
                <label asp-for="nome_comum" class="control-label"></label>
                <input asp-for="nome_comum" class="form-control" />
                <span asp-validation-for="nome_comum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="especie" class="control-label"></label>
                <input asp-for="especie" class="form-control" />
                <span asp-validation-for="especie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_risco" class="control-label"></label>
                <input asp-for="id_risco" class="form-control" />
                <span asp-validation-for="id_risco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
